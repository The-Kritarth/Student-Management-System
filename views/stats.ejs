<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/data.css">
    <link rel="stylesheet" href="css/nav.css">
    <title>Stats</title>
</head>
<body>
    <nav>
        <a href="/"><img src="assets/home_icon.jpg" alt="icon" class="navIcon"></a>
        <ul>
            <!-- <li><a href="/profile_teacher" class="alert-light" >Profile</a></li> -->
            <li><a href="/" >Logout</a></li>
        </ul>
    </nav>
    
    <div class="content">
        <h1><u>Stats</u></h1>
        <div class="stuData">
            <% if(student.length > 0) { %>
                <form action="/attendance" method="post">
                    <table>
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">User_id</th>
                                <th scope="col">Attendance</th>
                                <th scope="col">CT1</th>
                                <th scope="col">CT2</th>
                                <th scope="col">Assignment</th>
                                <th scope="col">End_Sem</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for( i =0; i<student.length ;i++){ %>
                                <tr>
                                    <td><%= student[i].s_no %></td>
                                    <td><%= student[i].id %></td>
                                    <td><%= student[i].attendence %></td>
                                    <td><%= student[i].ct1 %></td>
                                    <td><%= student[i].ct2 %></td>
                                    <td><%= student[i].assignment %></td>
                                    <td><%= student[i].end_sem %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </form>
            <% } %>
        </div>
    </div>
</body>
</html>